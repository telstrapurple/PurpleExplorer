<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="200"
        x:Class="PurpleExplorer.Views.ConnectionStringWindow"
        xmlns:vm="clr-namespace:PurpleExplorer.ViewModels;assembly=PurpleExplorer"
        Title="Connect to Service Bus" Width="500" Height="200">

    <Design.DataContext>
        <vm:ConnectionStringWindowViewModel />
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" MinWidth="500" MinHeight="150" TextWrapping="Wrap" HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch" Text="{Binding Path=ConnectionString, Mode=TwoWay}" />
        <Button Grid.Row="1" Width="200" Height="30" Margin="0,0,5,0" HorizontalAlignment="Right"
                IsEnabled="{Binding ConnectionString, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                VerticalAlignment="Center" Click="btnSendClick">
            Connect to Service Bus
        </Button>
    </Grid>
</Window>